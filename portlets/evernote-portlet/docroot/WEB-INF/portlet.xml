<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>evernote-organizer-portlet</portlet-name>
		<display-name>Evernote Organizer</display-name>
		<portlet-class>com.rivetlogic.evernote.portlet.EvernotePortlet</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/jsp/view.jsp</value>
		</init-param>
		<init-param>
		    <name>config-template</name>
		    <value>/jsp/edit.jsp</value>
		</init-param>
		<init-param>
			<name>create-note-jsp</name>
			<value>/jsp/include/create_note.jsp</value>
		</init-param>
		<init-param>
			<name>help-template</name>
			<value>/jsp/help.jsp</value>
		</init-param>
		<init-param>
            <name>check-auth-token</name>
            <value>false</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>Evernote Organizer</title>
			<short-title>Evernote Organizer</short-title>
			<keywords>Evernote Organizer</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>